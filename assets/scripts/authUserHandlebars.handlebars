
<table id="user-survey-table" class="table table-striped signed-in-view">

 <thead>
    <tr>
      <th>Survey Title</th>
    </tr>
  </thead>
{{#each surveys as |survey|}}
      <tr>
        <td>{{survey.title}}</td>
        <td>{{survey.owner}}</td>
        <td><button surveyId="{{survey.id}}" type="click" class="btn btn-danger view-questions-button">View Survey</button></td>
        <td><button surveyId="{{survey.id}}" type="click" class="btn btn-danger delete-survey-button">Delete</button></td>
        <td><form class="update-survey-by-id-form" surveyId="{{survey.id}}">
            <input type="text" id="update-survey-by-id-button" name="survey[title]">
            <input type="hidden" name="id" value="{{survey.id}}">
        <button surveyId="{{survey.id}}" type="submit" task="text" class="btn btn-info update-survey-button">Edit</button>
      </form>
      </tr>
  {{/each}}
</table>
